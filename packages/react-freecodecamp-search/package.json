{
  "name": "react-freecodecamp-search",
  "version": "1.4.2",
  "description": "A React component that utilises our Elasticsearch search engine",
  "repository": {
    "type": "git",
    "url": "https://github.com/Bouncey/react-freecodecamp-search.git"
  },
  "bugs": "https://github.com/Bouncey/react-freecodecamp-search/issues",
  "main": "dist/index.js",
  "scripts": {
    "build": "NODE_ENV=production webpack",
    "dev": "NODE_ENV=development webpack-dev-server --config ./devServer/webpack.config.js --content-base devServer/build/public --inline --hot --port 8000",
    "dev-build": "webpack --config ./devServer/webpack.config.js",
    "eslint-init": "eslint --init",
    "format": "prettier --single-quote es5 --write '{src,__tests__}/**/*.js' && yarn lint",
    "lint": "eslint --fix --ext .js,.jsx --ignore-path .gitignore . --ignore-pattern dist/",
    "inspect": "NODE_ENV=production webpack --profile --json > webpack-stats.json",
    "pretest": "npm run build",
    "prepare": "npm run build",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [],
  "author": "freeCodeCamp",
  "license": "BSD-3-Clause",
  "jest": {
    "moduleNameMapper": {
      "^.+\\.(css|less)$": "<rootDir>/__mocks__/cssStub.js"
    }
  },
  "dependencies": {
    "react-instantsearch": "^5.0.1",
    "rxjs": "^5.5.7",
    "xhr": "^2.4.1"
  },
  "peerDependencies": {
    "react": "^15.6.2",
    "lodash": "^4.17.5"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^7.2.3",
    "babel-istanbul": "^0.12.2",
    "babel-jest": "^20.0.3",
    "babel-loader": "^7.1.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-stage-0": "^6.24.1",
    "chai": "^4.1.2",
    "css-loader": "^0.28.10",
    "enzyme": "^2.9.1",
    "eslint": "^4.19.0",
    "eslint-config-essentials": "^1.1.1",
    "eslint-config-freecodecamp": "^1.1.1",
    "eslint-plugin-import": "^2.9.0",
    "eslint-plugin-prefer-object-spread": "^1.2.1",
    "eslint-plugin-react": "^7.7.0",
    "express": "^4.16.3",
    "jest": "^20.0.4",
    "lodash": "^4.17.5",
    "nodemon": "^1.17.2",
    "prettier": "^1.11.1",
    "prop-types": "^15.6.1",
    "proxyquire": "^1.8.0",
    "react": "^15.6.2",
    "react-bootstrap": "^0.31.5",
    "react-dom": "^15.6.2",
    "react-test-renderer": "^15.6.2",
    "style-loader": "^0.18.2",
    "webpack": "^4.1.1",
    "webpack-cli": "^2.0.12",
    "webpack-dev-server": "^3.1.1"
  }
}
